@{
    ViewData["Title"] = "Panel de Control";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
    var fechaActual = DateTime.Now.ToString("dddd, dd MMMM yyyy");
    var horaActual = DateTime.Now.ToString("HH:mm:ss");
   
}

@if (ViewData["Rol"] != null && (string)ViewData["Rol"] == "Empleado")
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 text-center">
                <div class="card shadow-lg p-4">
                    <div class="row">
                        <!-- Columna para la imagen de perfil -->
                        <div class="col-12 col-md-4 text-center mb-4 mb-md-0">
                            <img src="~/design/images/usuario.png" alt="Perfil de Usuario" class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                        </div>
                        <!-- Columna para el mensaje de bienvenida -->
                        <div class="col-12 col-md-8 text-center text-md-start">
                            <h1 class="display-5 text-success fw-bold">Bienvenido, @ViewData["userName"]</h1>
                            <p class="lead text-muted">¡Nos alegra tenerte de vuelta!</p>

                            <!-- Mostrar la fecha y la hora actual -->
                            <p class="text-muted mb-2">Hoy es <strong>@fechaActual</strong>, y la hora actual es <strong>@horaActual</strong>.</p>

                            <!-- Slogan motivacional -->
                            <h4 class="text-primary mt-4">"¡Trabaja con pasión y logra tus sueños!"</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (ViewData["Rol"] != null && (string)ViewData["Rol"] == "Cliente")
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 text-center">
                <div class="card shadow-lg p-4">
                    <div class="row">
                        <!-- Columna para la imagen de perfil -->
                        <div class="col-12 col-md-4 text-center mb-4 mb-md-0">
                            <img src="~/design/images/usuario.png" alt="Perfil de Usuario" class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                        </div>
                        <!-- Columna para el mensaje de bienvenida -->
                        <div class="col-12 col-md-8 text-center text-md-start">
                            <h1 class="display-5 text-success fw-bold">Bienvenido, @ViewData["userName"]</h1>
                            <p class="lead text-muted">¡Nos alegra tenerte de vuelta!</p>

                            <!-- Mostrar la fecha y la hora actual -->
                            <p class="text-muted mb-2">Hoy es <strong>@fechaActual</strong>, y la hora actual es <strong>@horaActual</strong>.</p>

                            <!-- Mostrar el dinero en la cuenta -->
                            <p class="text-muted mb-2">Tienes un saldo actual de <strong>@ViewData["saldo"]</strong> en tu cuenta.</p>

                            <!-- Slogans motivacionales -->
                            <h4 class="text-primary mt-2">"¡Disfruta algo delicioso hoy!"</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
