@model IEnumerable<CafeXperienceApp.Models.Campus>

@{
    ViewData["Title"] = "Index";
}

<section style=" padding-right: 50px; padding-left: 50px;">
    <h1>Campus</h1>

    <p style="text-align: right;">
        <a class="btn btn-info" asp-action="Create">Crear Campus</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @{
                            if (item.Estado == "a")
                            {
                                <p>Activo</p>
                            }
                            if (item.Estado == "i")
                            {
                                <p>Inactivo</p>
                            }
                            if (item.Estado == "b")
                            {
                                <p>Bloqueado</p>
                            }
                        }
                    </td>
                    <td>
                        <a class="btn btn-success"  asp-action="Edit" asp-route-id="@item.IdCampus">Editar</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCampus">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>
