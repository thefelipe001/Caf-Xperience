@{
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
    ViewData["Title"] = "Marcas";
}

<!-- Cargar un script personalizado -->
<script src="~/javascripts/Marca/Home.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html" style="color: #28a745;">Gestion</a></li>
    <li class="breadcrumb-item active">Marcas</li>
</ol>

<div class="card mb-4">
    <div class="card-header" style="background-color: #28a745; color: white;">
        <i class="fas fa-table me-1"></i> Listado de Marcas
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-sm-12">
                <button class="btn" style="background-color: #20c997; border: none; color: white; padding: 10px 20px; font-size: 16px; border-radius: 5px;" type="button" onclick="abrirModal(null)">
                    <i class="fas fa-plus"></i> Crear Nuevo
                </button>


            </div>
        </div>

        <!-- Spinner de carga dentro de la tabla -->
        <div id="loading-spinner" class="d-none table-loading-spinner text-center">
            <div class="spinner-border text-success" style="width: 5rem; height: 5rem;" role="status">
                <span class="sr-only">Cargando...</span>
            </div>
            <p style="color: #28a745;">Cargando datos, por favor espera...</p>
        </div>

        <hr />

        <!-- Tabla para mostrar las marcas -->
        <table id="tabla" class="display responsive table table-bordered" style="width:100%">
            <thead style="background-color: #28a745; color: white;">
                <tr>
                    <th>ID</th>
                    <th>Descripcion</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí va la data que se llena dinámicamente -->
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content shadow-lg rounded-4 border-0">
            <div class="modal-header bg-success text-white rounded-top">
                <h5 class="modal-title fw-bold" id="exampleModalLabel">Gestión de Marcas</h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-5 py-4">
                <form id="formNivel" class="needs-validation" novalidate>
                    <input id="IdMarca" name="IdMarca" type="hidden" />

                    <!-- Imagen del producto -->
                    <div class="row mb-4 text-center">
                        <div class="col-sm-12">
                            <div id="imgContainer" class="border border-dark rounded-circle d-flex justify-content-center align-items-center" style="height: 200px; width: 200px; overflow: hidden; background-color: #f0f0f0;">
                                <img id="img_producto" class="img-fluid" style="display: none;" alt="Imagen de Producto" />
                                <span id="defaultText" class="text-muted">Imagen de Marca</span> <!-- Texto predeterminado -->
                            </div>
                        </div>
                        <div class="col-sm-12 mt-3">
                            <input class="form-control form-control-lg" type="file" id="imgproducto" onchange="readURL(this);" accept="image/*">
                            <small class="text-muted d-block mt-2">Sube la imagen del producto</small>
                        </div>
                    </div>

                    <!-- Campo Descripción -->
                    <div class="row mb-4">
                        <div class="col-sm-12">
                            <div class="form-floating position-relative">
                                <input type="text" class="form-control required rounded-3" id="txtdescripcion" name="Descripcion" autocomplete="off" placeholder="Descripción" required>
                                <label for="txtdescripcion" class="text-muted">Descripción</label>
                                <div class="invalid-feedback">
                                    Por favor ingresa una descripción válida.
                                </div>
                                <i class="bi bi-pencil-fill position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Campo Estado -->
                    <div class="row mb-4">
                        <div class="col-sm-12">
                            <div class="form-floating position-relative">
                                <select id="cboEstado" class="form-select rounded-3" name="Estado" required>
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                                <label for="cboEstado" class="text-muted">Estado</label>
                                <i class="bi bi-check-circle-fill position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></i>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Botones de acción -->
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn btn-danger btn-lg px-4" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary btn-lg px-4" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript para leer la imagen cargada -->
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                // Muestra la imagen y oculta el texto predeterminado
                document.getElementById('img_producto').style.display = 'block';
                document.getElementById('defaultText').style.display = 'none';
                document.getElementById('img_producto').src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
